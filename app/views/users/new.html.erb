<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
	<%= form_for(@user) do |f| %>
	 	<!-- # This reflects the common rails convention of using a dedicated shared/ directory for partials expected to be used in views across multiple controllers. -->
		<%= render 'shared/error_messages' %> 

		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create my account", class: "btn btn-lage btn-primary" %>
	<% end %>
	</div>
</div>